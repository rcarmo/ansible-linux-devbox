    }
    image
    {
      function				= ARROW
      recolorable			= TRUE
      state				= ACTIVE
      overlay_file			= "Images/Combo/combo-arrow.gif"
      overlay_stretch	= FALSE
      arrow_direction	= DOWN
    }
    image
    {
      function				= ARROW
      recolorable			= TRUE
      state				= INSENSITIVE
      overlay_file			= "Images/Combo/combo-arrow.gif"
      overlay_stretch	= FALSE
      arrow_direction	= DOWN
    }


  }
